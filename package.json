{
  "name": "digital-logic-simulator",
  "version": "1.0.0",
  "description": "A tool for simulating digital logic circuits",
  "main": "index.js",
  "devDependencies": {
    "gh-pages": "^6.0.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "deploy": "gh-pages -d src",
    "predeploy": "npm run build",
    "build": "tsc && tsc-alias --resolve-full-paths",
    "resolve": "tsc-alias --resolve-full-paths",
    "watch": "tsc && (concurrently --kill-others \"tsc -w\" \"tsc-alias -w --resolve-full-paths\")"
  },
  "author": "Awab Ahmed",
  "license": "MIT"
}
